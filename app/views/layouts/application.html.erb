<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <aside id="tippytop" class="tippytop">
      <%= yield :tippytop %>
    </aside>
    <header id="header" class="site-header">
      <%= yield :header %>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
      <%= yield :footer %>
    </footer>
  </body>
</html>
